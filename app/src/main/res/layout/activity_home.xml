<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:layout_marginTop="30dp"
           android:src="@drawable/line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="#263238"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Workshop Ramadhan Produktif"/>

        <TextView
            android:id="@+id/tentang"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_garis"
            android:textSize="22dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:text="Workshop yang diselenggarakan Universitas Hamzanwadi dalam rangka memanfaatkan bulan yang berkah dengan hal-hal produktif. Acara ini khusus dilaksanakan dilingkungan Fakultas Teknik Hamzanwadi."/>


        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:text="Bagikan Ke Teman"
            android:textSize="24dp"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>